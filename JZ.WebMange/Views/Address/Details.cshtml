@{
    @model JZ.Application.Contract.Dtos.Business.AddressDto

}


<div class="row justify-content-md-center">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">编辑动态信息</h4>
            </div>
            <div class="card-body">
                <form class="form-horizontal" asp-controller="Address" asp-action="Save">
                     
                <input type="hidden" name="ID" value="@Model.ID" />
                
                <div class=" row mb-4">
                    <label class="col-md-2 form-label">用户id<span class="text-red">*</span></label>
                    <div class="col-md-9">
                        <input type="text" name="UserID" id="txtTitle" class="form-control" value="@Model.UserID">
                    </div>
                </div>
                
                <div class=" row mb-4">
                    <label for="inputName" class="col-md-2 form-label">地址<span class="text-red">*</span></label>
                    <div class="col-md-9">
                        <input type="text" name="Address" id="txtSummary" class="form-control" value="@Model.Address">
                    </div>
                </div>
                <div class=" row mb-4">
                    <label for="container" class="col-md-2 form-label">电话</label>
                    <div class="col-md-9">
                        <input type="text" name="Phone" id="txtSummary" class="form-control" value="@Model.Phone">
                    </div>
                </div>
                
                <div class="mb-0 mt-4 row justify-content-end">
                    <div class="col-md-9">
                        <button id="btnSave" class="btn btn-primary">保存</button>
                            <button id="btnCancle" class="btn btn-secondary">取消</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $("#btnCancle").on("click", function () {
            location.href = "/Address/Index";
        });
    </script>
}


